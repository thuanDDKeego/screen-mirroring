<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sreenmirroringcasttv" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary0</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary10</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Sreenmirroringcasttv.NoActionBar" parent="Theme.Sreenmirroringcasttv">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.Sreenmirroringcasttv.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="OnboardTheme" parent="Theme.Sreenmirroringcasttv.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_onboard_screen</item>
    </style>


    <style name="Theme.Sreenmirroringcasttv.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sreenmirroringcasttv.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>