<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgScreenBubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnTimerBubble"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelinePosition" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt2Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:paddingStart="@dimen/margin_10dp"
        android:text="@string/txt_2"
        android:textColor="@color/blueA01"
        app:layout_constraintBottom_toTopOf="@+id/btnTimerBubble"
        app:layout_constraintStart_toStartOf="@+id/btnTimerBubble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt5Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:text="@string/txt_5"
        android:textColor="@color/blueA01"
        app:layout_constraintBottom_toTopOf="@+id/btnTimerBubble"
        app:layout_constraintStart_toEndOf="@+id/txt2Second" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt10Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30dp"
        android:paddingHorizontal="@dimen/margin_10dp"
        android:text="@string/txt_10"
        android:textColor="@color/blueA01"
        app:layout_constraintBottom_toTopOf="@+id/btnTimerBubble"
        app:layout_constraintStart_toEndOf="@id/txt2Second"
        app:layout_constraintTop_toTopOf="@id/btnTimerBubble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt15Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30dp"
        android:paddingHorizontal="@dimen/margin_10dp"
        android:text="@string/txt_15"
        android:textColor="@color/blueA01"
        app:layout_constraintBottom_toBottomOf="@+id/btnTimerBubble"
        app:layout_constraintStart_toEndOf="@id/txt2Second"
        app:layout_constraintTop_toBottomOf="@id/btnTimerBubble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt20Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:paddingHorizontal="@dimen/margin_8dp"
        android:text="@string/txt_20"
        android:textColor="@color/blueA01"
        app:layout_constraintStart_toEndOf="@+id/txt2Second"
        app:layout_constraintTop_toBottomOf="@+id/btnTimerBubble" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt30Second"
        style="@style/BoldTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_36dp"
        android:paddingStart="@dimen/margin_10dp"
        android:text="@string/txt_30"
        android:textColor="@color/blueA01"
        app:layout_constraintEnd_toEndOf="@id/txt2Second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTimerBubble" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="306dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>