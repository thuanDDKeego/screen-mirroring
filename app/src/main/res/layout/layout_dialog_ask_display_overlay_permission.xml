<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintBgDialogAskPermission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark_gray_dialog">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_radius_top_15dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginVertical="@dimen/margin_12dp"
            android:src="@drawable/ic_close"
            android:tint="@color/txt_gray" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/img_banner_dialog_ask_permission" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtContentDialog"
            style="@style/regularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:gravity="left"
            android:text="@string/ask_display_overlay_permission_description"
            android:textColor="@color/txt_black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAllow"
            style="@style/regularBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginVertical="@dimen/margin_48dp"
            android:background="@drawable/bg_border_radius_10dp"
            android:backgroundTint="@color/blueA01"
            android:text="@string/allow"
            android:textAllCaps="false"
            android:textColor="@color/txt_white" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>