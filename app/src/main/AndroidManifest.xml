<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abc.sreenmirroring">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="Settings.ACTION_MANAGE_OVERLAY_PERMISSION" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sreenmirroringcasttv.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.settings.SettingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sreenmirroringcasttv.NoActionBar" />
        <activity
            android:name=".ui.devicemirror.DeviceMirrorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tutorial.TutorialActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sreenmirroringcasttv.NoActionBar" />
        <activity
            android:name=".ui.browsermirror.BrowserMirrorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.selectLanguage.SelectLanguageActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <service
            android:name=".service.MirrorService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".service.FloatToolService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sreenmirroringcasttv.NoActionBar" />

        <service
            android:name=".service.MirrorService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="com.abc.sreenmirroring.service.AppService"
            android:enabled="true" />
    </application>

</manifest>